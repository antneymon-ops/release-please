{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["es2018", "dom"],
    "rootDir": ".",
    "outDir": "build",
    "typeRoots": ["./typings", "./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": [
    "typings/**/*.d.ts",
    "src/**/*.ts",
    "test/**/*.ts",
    "system-test/*.ts"
  ],
  "exclude": [
    "node_modules/zod/v4"
  ]
}
